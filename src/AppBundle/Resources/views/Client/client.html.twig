{# src/AppBundle/Resources/views/Client/client.html.twig #}
{% extends "::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Module client - Clients
{% endblock %}

{% block breadcrumb %}
        <ol class="breadcrumb">
            <li><a href="{{ path('accueil_client') }}">Clients</a></li>
            <li class="active"><a href="{{ path('clients_client') }}">Liste</a></li>
        </ol>
{% endblock %}

{% block menu %}
    {{ render(controller("AppBundle:Client:menu")) }}
{% endblock %}

{% block body %}
    <div id="cadrebody">

        {% block titre %}
            <h3>Clients</h3>
        {% endblock %}

        <table id="tabliste">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Code postal</th>
                    <th>Ville</th>
                    <th>Pays</th>
                    <th>Commentaire</th>
                </tr>
            </thead>

            <tbody>
                {% for client in listeclient %}
                    <tr name='client' id='{{ client.idtSociete }}'>
                        <td>{{ client.nomSociete }}</td>
                        <td>{{ client.adresse1 }}</td>
                        <td>{{ client.codePostal }}</td>
                        <td>{{ client.ville }}</td>
                        <td>{{ client.pays }}</td>
                        <td>{{ client.commentaire }}</td>
                    </tr>
                {% endfor %}
            </tbody>

            <tfoot>
            </tfoot>
        </table>

        <div id="commandesParClient" data-path="{{ path('commandes_client') }}">
                
        </div>
    </div>
{% endblock %}  